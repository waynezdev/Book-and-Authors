<h1>Authors</h1>

<a href="/authors/new">Create New Author</a>

{{!-- The 'this' in this context refers to the specific author being handled at the time in the loop --}}


{{#each authors}}
<div>
    <p>Name: {{ this.name }}</p>
    <p>Bio: {{ this.bio }}</p>
    <p>Gender: {{ this.gender }}</p>
</div>

<a href="/authors/{{this._id}}">View Author</a>
{{!-- notice the "?_method=DELETE" this must be added to use a delete verb --}}
{{!-- Its a query param which is given 'method=DELETE' --}}
<a href="/authors/{{this._id}}?_method=DELETE">Delete Author</a>
<a href="/authors/{{this._id}}/edit">Edit Author</a>
{{!-- This horizontal line is frowned upon --}}
<hr />
{{/each}}